<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lessgrey"
    tools:context=".ui.Myheart">

    <com.github.lzyzsd.circleprogress.ArcProgress
        android:id="@+id/progress"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        custom:arc_bottom_text="Risk Score"
        custom:arc_progress="25"
        custom:arc_finished_color="@color/yellow"
        custom:arc_text_color="@color/yellow"
        custom:arc_unfinished_color="@color/colorPrimaryDark"
        custom:arc_bottom_text_size="25sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Here there will be  other inferred statistics"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="400dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp" />


</FrameLayout>